<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_x="36dp"
        android:layout_y="461dp"
        android:text="Buy Now"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_x="236dp"
        android:layout_y="460dp"
        android:text="Add to Cart"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="218dp"
        android:layout_y="405dp"
        android:hint="000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_x="119dp"
        android:layout_y="405dp"
        android:text="Total Cost :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_x="4dp"
        android:layout_y="340dp"
        android:text="topped with crushed San Marzano tomatoes, low-moisture mozzarella cheese, and various toppings."
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="305dp"
        android:text="Ingridents"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="245dp"
        android:text="225/-"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/subButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_x="244dp"
        android:layout_y="241dp"
        android:text="-"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_x="309dp"
        android:layout_y="239dp"
        android:text="+"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/quantityTextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_x="270dp"
        android:layout_y="246dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="54dp"
        android:src="@drawable/newyorkpizza" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="130dp"
        android:layout_y="10dp"
        android:text="NEWYORK PIZZA"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</AbsoluteLayout>
